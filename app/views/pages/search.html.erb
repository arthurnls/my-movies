<h2>Search Results</h2>
<p>The search of <strong><%= @searched_term %></strong> resulted in <%= @total %> titles found.</p>

<small>Jump to: <a href="#movies"><%= @types[1].name %>s</a> || <a href="#type0"><%= @types[0].name %>s</a> | <a href="#type1"><%= @types[1].name %>s</a></small>
<ul class="list-group list-inline">
    <li>
        <span id="movies" style="position:relative; top: -50px;" ></span>
        <hr/><h4>&nbsp;&nbsp;&nbsp;Movies</h4>
        <ul class="list-group list-inline">
        <% if @movies.empty? %>
            <li>There were no movies found.</li>
        <% else %>
            <% @movies.each do |movie| %>
            <li class="list-group-item list-inline-item"><%= link_to movie.title, movie %></li>
            <% end %>
        <% end %>
        </ul>
    </li>

    <li class="mt-3">
        <span id="type0" style="position:relative; top: -50px;" ></span>
        <hr/><h4>&nbsp;&nbsp;&nbsp;Netflix <%= @types[0].name %>s</h4>
        <ul class="list-group list-inline">
        <% if @netflix_titles_type0.empty? %>
            <li>There were no Netflix <%= @types[0].name %>s found.</li>
        <% else %>
            <% @netflix_titles_type0.each do |netflix_title| %>
            <li class="list-group-item list-inline-item"><%= link_to netflix_title.title, netflix_title %></li>
            <% end %>
        </ul>
        <% end %>
    </li>

    <li class="mt-3">
        <span id="type1" style="position:relative; top: -50px;" ></span>
        <hr/><h4>&nbsp;&nbsp;&nbsp;Netflix <%= @types[1].name %>s</h4>
        <ul class="list-group list-inline">
        <% if @netflix_titles_type1.empty? %>
            <li>There were no Netflix <%= @types[1].name %>s found.</li>
        <% else %>
            <% @netflix_titles_type1.each do |netflix_title| %>
            <li class="list-group-item list-inline-item"><%= link_to netflix_title.title, netflix_title %></li>
            <% end %>
        </ul>
        <% end %>
    </li>
</ul>






